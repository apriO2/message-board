<%= form_for(@message , html:{ class:'form-horizontal'}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
            <li>
              <%= full_message %>
            </li>
          <% end %>
       </ul>
      </div>
  <% end %>
      <div class="form-group">
        <%= f.label "名前", class:"control-label col-md-1" %>
          <div class="col-md-11">
           <%= f.text_field :name, placeholder: 'name',class: 'form-control' %>
          </div>
      </div>
      <div class="form-group">
        <%= f.label "本文", class:"control-label col-md-1" %>
        <div class="col-md-11">
           <%= f.text_area :body, placeholder: 'messageを入力してください',class: 'form-control', rows: '3' %>
        </div>
       </div>
       <div class="form-group">
         <div class="col-sm-offset-1 col-sm-11">
          <%= f.submit class: "btn btn-sm btn-primary" %>
        </div>
      </div> 
 <% end %>
 </div>
          